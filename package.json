{
  "name": "library",
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "db:up": "npm run db:up -w server",
    "db:down": "npm run db:down -w server",
    "db:start": "npm run db:start -w server",
    "db:stop": "npm run db:stop -w server",
    "db:migrate": "npm run db:migrate -w server",
    "db:seed": "npm run db:seed -w server",
    "db:reset": "npm run db:reset -w server",
    "lint:type": "turbo lint:type",
    "lint:js": "turbo lint:js",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "body-parser": "^1.20.2",
    "date-fns": "^3.6.0",
    "http-status-codes": "^2.3.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "prettier": "^3.2.5",
    "sass": "^1.76.0",
    "turbo": "latest",
    "typescript": "^5.4.5"
  }
}
