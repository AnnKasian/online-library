{
  "extends": "../tsconfig.json",
  "include": [
    "src",
    "typings",
    "vite.config.ts",
    "tailwind.config.cjs",
    "postcss.config.cjs"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "@/*": ["../shared/src/*"]
    }
  }
}
